@model List<ResultLocationDto>
<script src="~/chart.js"></script>


<div class="col-lg-4">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title d-inline-block">Lokasyon Verileri</h4>

            <div style="height: 260px;">
                <canvas id="my3Chart"></canvas>
                <script>
                    var values=document.getElementById('my3Chart').getContext('2d');
                    var mychart=new Chart(values,{
                        type:'bar',
                        data:{
                            labels:[
                    @foreach (var location in Model)

                    {

                        @: @Html.Raw(Json.Serialize(location.Name)),

                    }
                            ],
                            datasets:[{
                                label:'Marka Grafik Listesi',
                                data:[
                    @foreach (var location in Model)

                    {

                        @: @location.LocationId,

                    }
                                ],
                                backgroundColor:[
                                'rgba(255,99,132,0.7)',
                                'rgba(54,162,235,0.7)',
                                'rgba(255,256,86,0.7)',
                                'rgba(75,192,192,0.7)',
                                'rgba(153,102,255,0.7)',
                                'rgba(255,259,64,0.7)',

                            ],

                                borderColor:[
                                    'rgba(75,192,192,1)',
                                  'rgba(255,99,132,1)',
                                'rgba(54,162,235,1)',
                                'rgba(255,256,86,1)',
                                'rgba(75,192,192,1)',
                                'rgba(153,102,255,1)',
                                'rgba(255,259,64,1)',
                                ],
                                borderWidth:1
                            }]
                        },
                        options:{
                            scales:{
                                y:{
                                    beginAtZero:true
                                }
                            }
                        }
                    });
                </script>
            </div>


        </div>
    </div>
</div> <!-- end col -->
