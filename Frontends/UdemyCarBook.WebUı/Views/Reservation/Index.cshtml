@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">
        <h3 class="alert-success">Araç Rezervasyon Formu</h3>
        <div class="form-group">

            <input type="hidden" asp-for="CarId" readonly value="@ViewBag.v3" class="form-control" placeholder="Almak istediğiniz Araba">
        </div>
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Adınız">
        </div>

        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınız">
        </div>
        <div class="form-group">
            <label>Mail Adresi</label>
            <input type="text" asp-for="Mail" class="form-control" placeholder="Mail Adresi">
        </div>
        <div class="form-group">
            <label>Telefon Numarası</label>
            <input type="text" asp-for="Phone" class="form-control" placeholder="Telefon Numaranız">
        </div>

        <div class="form-group">
            <label>Almak İstenilen Lokasyon</label>
            <select class="form-control" asp-for="PickUpLocationId" asp-items="ViewBag.v">
                <option disabled selected>Lütfen Alış Lokasyonunu Seçiniz</option>
            </select>
           
        </div>

        <div class="form-group">
            <label>İade Edilecek Lokasyon</label>
            <select class="form-control" asp-for="DropOffLocationId" asp-items="ViewBag.v">
                <option disabled selected>Lütfen Teslim Lokasyonunu Seçiniz</option>
            </select>
            
        </div>
        <div class="form-group">
            <label>Yaşınız</label>
            <input type="text" asp-for="Age" class="form-control" placeholder="Yaşınız">
        </div>
        <div class="form-group">
            <label>Ehliyet Yılınız</label>
            <input type="text" asp-for="DriveLicenseYear" class="form-control" placeholder="Ehliyet yılınız">
        </div>
        <div class="form-group">
            <label>Eklemek İstedikleriniz</label>
            <textarea  cols="30" rows="7" asp-for="Description" class="form-control" placeholder="Varsa Eklemek İstedikleriniz..."></textarea>
        </div>
        <div class="form-group">
            <input type="submit" id="reservationCompleated" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    $("#reservationCompleated").click(function(){
        swal("Rezervasyon Alındı!", "Rezervasyon Başarılı Bir Şekilde Alındı!", "success")
        .then(() => {
                    
                    window.location.href = "/Reservation/Index";
                });
    });
</script>