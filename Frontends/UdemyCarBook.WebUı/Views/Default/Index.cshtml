@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_HeadLayoutComponentPartial")
<body>

    @await Component.InvokeAsync("_NavbarLayoutComponentPartial")


    
    @await Component.InvokeAsync("_DefaultCoverLayoutComponentPartial")
    <style>
        .request-form .form-control {
            background: rgb(16, 137, 255) !important;
            color: #fff !important;
            font-size: 14px;
        }
    </style>
    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form action="/RentACarList/Index" method="post" class="request-form ftco-animate bg-primary">
                                <h2>Şimdi Aracınızı Kiralayın</h2>
                                <div class="form-group">
                                    <label for="" class="label">Alınacak Lokasyon</label>
                                    @Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                                </div>

                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Alınmak İstenen Tarih</label>
                                        <input type="text" class="form-control" name="book_pick_date" id="book_pick_date" placeholder="Date">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">İade Tarih</label>
                                        <input type="text" class="form-control" name="book_off_date" id="book_off_date" placeholder="Date">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Alış Saati</label>
                                    <input type="text" class="form-control" name="time_pick" id="time_pick" placeholder="Alış Saati">
                                </div>

                                <div class="form-group">
                                    <label for="" class="label">İade Saati</label>
                                    <input type="text" class="form-control" name="timeoff_pick" id="time_pick" placeholder="İade Saati">
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Uygun Araçları Bul" class="btn btn-secondary py-3 px-4">
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araç Kiralamanın En Basit Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak istediğin konumu seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En Uygun Araçları gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Kiralamayı tamamla,Hepsi Bu!</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a href="/CarPricing/Index" class="btn btn-primary py-3 px-4">Araç Fiyat Listemizi Görün</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>


    @await Component.InvokeAsync("_DefaultLast5CarsWithBrandComponentPartial")

    @await Component.InvokeAsync("_AboutUsComponentPartial")

    @await Component.InvokeAsync("_ServiceComponentPartial")

    @await Component.InvokeAsync("_BecomeADriverComponentPartial")

    @await Component.InvokeAsync("_TestimonialComponentPartial")

    @await Component.InvokeAsync("_GetLast3BlogWithAuthorListComponentPartial")

    @await Component.InvokeAsync("_DefaultStatisticsComponentPartial")

    @await Component.InvokeAsync("_FooterLayoutComponentPartial")

    @await Component.InvokeAsync("_ScriptLayoutComponentPartial")
</body>
</html>

