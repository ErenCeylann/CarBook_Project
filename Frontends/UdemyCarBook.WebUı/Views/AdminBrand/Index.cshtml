@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Marka Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla markaları ile İlgili yeni marka ekleme,marka listeleme ve bir marka silme gibi işlemleri burdan gerçekleştirebilirsiniz.
                        </p>

                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>MarkaAdı</th>
                                            <th>Güncelle</th>
                                            <th>Sil</th>
                                            <th>Markaya Ait Araçlar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.name</td>
                                                <td><a href="/AdminBrand/UpdateBrand/@item.brandId" class="btn btn-outline-success">Güncelle</a></td>
                                                <td><a href="/AdminBrand/RemoveBrand/@item.brandId" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/AdminBrand/RemoveBrand/@item.brandId" class="btn btn-outline-primary">Markaya Ait Araçlar</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-danger" role="alert">
                                    <h4 class="alert-heading">Özellik Bulunamadı!</h4>
                                    <p>Şu anda marka bulunmamaktadır.Yeni marka eklemek için aşşağıdan özellik girişi butonuna tıklayınız.</p>
                                </div>
                            }
                            <a href="/AdminBrand/CreateBrand" class="btn btn-outline-info">Yeni Araç Özellik Girişi</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





