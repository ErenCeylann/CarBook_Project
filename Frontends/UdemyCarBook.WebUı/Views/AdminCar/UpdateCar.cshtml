@model UpdateCarDto
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Araç Güncelleme Sayfasu</h4>
                        <p class="card-subtitle mb-4">Araç ile ilgili temel bilgileri eksiksiz şekilde doldurmanız önemlidir.Kaydet butonuna tıklayarak Güncelleme işlemi tamamlayabilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="CarId" />
                            <div class="form-group">
                                <label for="exampleInputBrand">Marka</label>
                                @Html.DropDownListFor(x => x.BrandId, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" asp-for="Model" class="form-control" id="exampleInputModel" placeholder="Model Girişi Yapınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCover">Kapak Fotoğrafı</label>
                                <input type="text" asp-for="CoverImageUrl" class="form-control" id="exampleInputCover" placeholder="Kapak Fotoğraf Linki Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputKm">Km</label>
                                <input type="text" asp-for="Km" class="form-control" id="exampleInputKm" placeholder="Km Bilgisi Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputTransmisson">Vites Türü</label>
                                <input type="text" asp-for="Transmission" class="form-control" id="exampleInputTransmisson" placeholder="Vites Türünü Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputSeat">Koltuk Sayısı</label>
                                <input type="number" asp-for="Seat" class="form-control" id="exampleInputSeat" placeholder="Koltuk Sayısını Seçiniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputLuggae">Bagaj Sayısı</label>
                                <input type="number" asp-for="Luggage" class="form-control" id="exampleInputLuggae" placeholder="Bagaj Sayısını Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputFuel">Yakıt Türü</label>
                                <input type="text" asp-for="Fuel" class="form-control" id="exampleInputFuel" placeholder="Yakıt Türü Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputBigImage">Büyük Kapak Fotoğrafı</label>
                                <input type="text" asp-for="BigImageUrl" asp-for="Fuel" class="form-control" id="exampleInputBigImage" placeholder="Araç Detayında Görükecek Kapak Fotoğrafı Linki Giriniz">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>




