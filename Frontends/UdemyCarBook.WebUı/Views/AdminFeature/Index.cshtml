@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Özellikleri Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla İlgili yeni özellik ekleme(klima,audio,elektrik vs.),özellik listeleme ve bir özelliği silme gibi işlemleri burdan gerçekleştirebilirsiniz.Temada veri tutarlılığını sağlayabilmek için 3 ün katı şeklinde veri girişi yapınız.
                        </p>

                        <div class="table-responsive">
                            @if(Model.Count>0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Özellik</th>
                                            <th>Güncelle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td><a href="/AdminFeature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success">Güncelle</a></td>
                                                <td><a href="/AdminFeature/RemoveFeature/@item.FeatureId" class="btn btn-outline-danger">Sil</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-danger" role="alert">
                                    <h4 class="alert-heading">Özellik Bulunamadı!</h4>
                                    <p>Şu anda özellik bulunmamaktadır.Yeni özellik eklemek için aşşağıdan özellik girişi butonuna tıklayınız.</p> 
                                </div>                             
                            }
                            <a href="/AdminFeature/CreateFeature" class="btn btn-outline-info">Yeni Araç Özellik Girişi</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



