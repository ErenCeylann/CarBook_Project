@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Araç Özellik Girişi</h4>
                        <p class="card-subtitle mb-4">Araç özellikleri ile ilgili temel bilgileri eksiksiz şekilde doldurmanız önemlidir.Kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="FeatureId" />
                            <div class="form-group">
                                <label for="exampleInputModel">Özellik Adı</label>
                                <input type="text" asp-for="Name" class="form-control" id="exampleInputModel" placeholder="Özellik Adı Yazınız">
                            </div>



                            <button type="submit" class="btn btn-primary waves-effect waves-light">Arac Özelliğini Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

