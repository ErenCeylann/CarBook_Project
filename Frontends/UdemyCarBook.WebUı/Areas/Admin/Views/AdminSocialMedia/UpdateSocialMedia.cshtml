@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Sosyal Medya Güncelleme</h4>
                        <p class="card-subtitle mb-4">Sosyal Medya alanına aşşağıdan veri güncelleyebilirsiniz.</p>


                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaId" />
                            <div class="form-group">
                                <label for="exampleInputModel">Sosyal Medya Adı</label>
                                <input type="text" asp-for="Name" class="form-control" id="exampleInputModel" placeholder="Sosyal Medya Adı giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Sosyak Medya Url</label>
                                <input type="text" asp-for="Url" class="form-control" id="exampleInputModel" placeholder="Sosyak Medya Url giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel"> Icon</label>
                                <input type="text" asp-for="Icon" class="form-control" id="exampleInputModel" placeholder="Hizmet Icon giriniz">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>





