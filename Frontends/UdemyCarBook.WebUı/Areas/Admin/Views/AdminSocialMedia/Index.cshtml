@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal Medya bilgilerinin  yer aldığı sayfadır.Bu sayfa üzerinden sosyal medya eklenebilir,silinebilir, veya güncellenebilir.
                        </p>

                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Sosyal Medya Adı</th>
                                            <th>Url</th>
                                            <th>İkon</th>
                                            <th>Güncelle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td>@item.Url</td>
                                                <td>@item.Icon</td>
                                                <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a></td>
                                                <td><a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-danger" role="alert">
                                    <h4 class="alert-heading">Sosyal Medya Bulunamadı!</h4>
                                    <p>Şu anda Hizmet bulunmamaktadır.Yeni Sosyal Medya eklemek için aşşağıdan Sosyal Medya girişi butonuna tıklayınız.</p>
                                </div>
                            }
                            <a href="/Admin/AdminSocialMedia/CreateSocialMedia" class="btn btn-outline-info">Sosyal Medya Girişi</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





