@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hakkımızda Alanı Girişi</h4>
                        <p class="card-subtitle mb-4">Hakkımızda alanına aşşağıdan veri girebilirsiniz.</p>
                        @if (ViewBag.gizle != 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                <h4 class="alert-heading">Hakkımızda Bulunmaktadır!</h4>
                                <p>Şu anda Hakkımızda bulunmaktadır.Yeni veri ekleyemezssiniz</p>
                            </div>
                        }
                        else
                        {
                            <form method="post">
                                <div class="form-group">
                                    <label for="exampleInputModel">Başlık</label>
                                    <input type="text" asp-for="Title" class="form-control" id="exampleInputModel" placeholder="Başlık Yazınız">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputModel">Açıklama</label>
                                    <input type="text" asp-for="Description" class="form-control" id="exampleInputModel" placeholder="Açıklama Yazınız">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputModel">Image Url</label>
                                    <input type="text" asp-for="ImageUrl" class="form-control" id="exampleInputModel" placeholder="Image Url Yazınız">
                                </div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımızda Kaydet</button>
                            </form>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>