@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referanslar Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Referans bilgilerinin  yer aldığı sayfadır.Bu sayfa üzerinden Referans eklenebilir,silinebilir, veya güncellenebilir.
                        </p>

                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Referans Adı</th>
                                            <th>Referans Başlığı</th>
                                            <th>Referans Yorumu</th>
                                            <th>Görsel</th>
                                            <th>Güncelle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td>@item.Title</td>
                                                <td>@item.Comment</td>
                                                <td><img src="@item.ImageUrl" style="width:50px;height:50px;border-radius:50%;" /></td>
                                                <td><a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-success">Güncelle</a></td>
                                                <td><a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-danger" role="alert">
                                    <h4 class="alert-heading">Referans Bulunamadı!</h4>
                                    <p>Şu anda Referans bulunmamaktadır.Yeni referans eklemek için aşşağıdan referans girişi butonuna tıklayınız.</p>
                                </div>
                            }
                            <a href="/Admin/AdminTestimonial/CreateTestimonial" class="btn btn-outline-info">referans Girişi</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







