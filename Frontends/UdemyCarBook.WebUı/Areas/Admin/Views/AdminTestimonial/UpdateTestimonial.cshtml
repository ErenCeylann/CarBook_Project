@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Referans Girişi</h4>
                        <p class="card-subtitle mb-4">Referans alanına aşşağıdan veri güncelleyebilirsiniz.</p>


                        <form method="post">
                            <input type="hidden" asp-for="TestimonialId" />
                            <div class="form-group">
                                <label for="exampleInputModel">Referans Adı</label>
                                <input type="text" asp-for="Name" class="form-control" id="exampleInputModel" placeholder="Referans Adı giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Referans Başlık</label>
                                <input type="text" asp-for="Title" class="form-control" id="exampleInputModel" placeholder="Referans Başlık giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Referans Yorum</label>
                                <input type="text" asp-for="Comment" class="form-control" id="exampleInputModel" placeholder="Referans Yorum giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel"> Image Url</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="exampleInputModel" placeholder="Referans giriniz">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

