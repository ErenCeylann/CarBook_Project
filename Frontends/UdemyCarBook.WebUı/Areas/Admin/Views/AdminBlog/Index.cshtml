@model List<ResultAllBlogWithAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog İşlemleri Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Bloglarda bulunan bilgileri aşşağıdan düzenleyebilirsiniz.Yeni blog ekleme işlemi admin tarafından yapılmamaktadır.Eğer blog eklemek istiyorsanız sisteme yazar olarak giriş yapmalısınız.Her yazar sadece kendi bloglarını düzenleyebilir.Bunun için uygulamada /Login/WriterLogin sayfası üzerinden giriş yapabilirsiniz.
                        </p>

                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Başlık</th>
                                            <th>Yazar</th>
                                            <th>Kategori</th>
                                            <th>Tarih</th>
                                            <th>Kaldır</th>
                                            <th>Blog Aç</th>
                                            <th>Yorumları Aç</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Title</td>
                                                <td>@item.AuthorName</td>
                                                <td>@item.CategoryName</td>
                                                <td>@item.CreateDate.ToShortDateString()</td>                                          
                                                <td><a href="/Admin/AdminBlog/RemoveBlog/@item.BlogId" class="btn btn-outline-danger">Kaldır</a></td>
                                                <td><a href="/Blog/BlogDetail/@item.BlogId" target="_blank" class="btn btn-outline-primary">Blog Aç</a></td>
                                                <td><a href="/Admin/AdminComment/Index/@item.BlogId" class="btn btn-outline-primary">Yorumlar</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-danger" role="alert">
                                    <h4 class="alert-heading">Blog Bulunamadı!</h4>
                                    <p>Şu anda Blog bulunmamaktadır.Yeni Blog eklemek için aşşağıdan özellik girişi butonuna tıklayınız.</p>
                                </div>
                            }
                            
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

