@model List<ResultFooterAdressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count1 = 0;
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">İletişim ve footer address Alanı</h4>
                        <p class="card-subtitle mb-4">
                            İletişim ve footer address alanında bulunan bilgileri aşşağıdan düzenleyebilirsiniz.
                        </p>

                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Adres</th>
                                            <th>Telefon</th>
                                            <th>E-Mail</th>
                                            <th>Açıklama</th>
                                            <th>Güncelle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count1++;
                                            <tr>
                                                <th scope="row">@count1</th>
                                                <td>@item.Address</td>
                                                <td>@item.Phone</td>
                                                <td>@item.Email</td>
                                                <td>@item.Description</td>
                                                <td><a href="/Admin/AdminFooterAdress/UpdateFooterAdress/@item.FooterAddressId" class="btn btn-outline-success">Güncelle</a></td>
                                                <td><a href="/Admin/AdminFooterAdress/RemoveFooterAdress/@item.FooterAddressId" class="btn btn-outline-danger">Sil</a></td>        
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-danger" role="alert">
                                    <h4 class="alert-heading">FooterAdress Bulunamadı!</h4>
                                    <p>Şu anda FooterAdress bulunmamaktadır.Yeni FooterAdress eklemek için aşşağıdan özellik girişi butonuna tıklayınız.</p>
                                </div>
                            }
                            <a href="/Admin/AdminFooterAdress/CreateFooterAdress" class="btn btn-outline-info">Yeni FooterAdress Girişi</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

