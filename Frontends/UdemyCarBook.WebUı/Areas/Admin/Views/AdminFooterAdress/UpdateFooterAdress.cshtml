@model UpdateFooterAdressDto
@{
    ViewData["Title"] = "UpdateFooterAdress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Footer Address Alanı Güncelleme</h4>
                        <p class="card-subtitle mb-4">Footer Address alanına aşşağıdan veri güncelleyebilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="FooterAddressId" />
                            <<div class="form-group">
                                <label for="exampleInputModel">Adres</label>
                                <input type="text" asp-for="Address" class="form-control" id="exampleInputModel" placeholder="Adres bilgisi">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Açıklama</label>
                                <input type="text" asp-for="Description" class="form-control" id="exampleInputModel" placeholder="Açıklama Yazınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Telefon</label>
                                <input type="text" asp-for="Phone" class="form-control" id="exampleInputModel" placeholder="Phone Number">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Email</label>
                                <input type="text" asp-for="Email" class="form-control" id="exampleInputModel" placeholder="Email Yazınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Adresi Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



