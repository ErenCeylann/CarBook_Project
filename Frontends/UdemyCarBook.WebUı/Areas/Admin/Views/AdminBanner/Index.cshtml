@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa Banner Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfanın banner alanında bulunan bilgileri aşşağıdan düzenleyebilirsiniz.
                        </p>

                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Başlık</th>
                                            <th>Açıklama</th>
                                            <th>Video Url</th>
                                            <th>Video Açıklama</th>
                                            <th>Güncelle</th>
                                            <th>Sil</th>
                                            <th>Videoyu İzle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Title</td>
                                                <td>@item.Description</td>
                                                <td>@item.VideoUrl</td>
                                                <td>@item.VideoDescription</td>
                                                <td><a href="/Admin/AdminBanner/UpdateBanner/@item.BannerId" class="btn btn-outline-success">Güncelle</a></td>
                                                <td><a href="/Admin/AdminBanner/RemoveBanner/@item.BannerId" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/AdminBanner/RemoveBanner/@item.BannerId" class="btn btn-outline-primary">Videoyu İzle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-danger" role="alert">
                                    <h4 class="alert-heading">Banner Bulunamadı!</h4>
                                    <p>Şu anda banner bulunmamaktadır.Yeni banner eklemek için aşşağıdan özellik girişi butonuna tıklayınız.</p>
                                </div>
                            }
                            <a href="/Admin/AdminBanner/CreateBanner" class="btn btn-outline-info">Yeni Banner Girişi</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>