@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Banner Alanı Güncelleme</h4>
                        <p class="card-subtitle mb-4">Ana sayfa banner alanına aşşağıdan veri girebilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="BannerId" />
                            <div class="form-group">
                                <label for="exampleInputModel">Başlık</label>
                                <input type="text" asp-for="Title" class="form-control" id="exampleInputModel" placeholder="Başlık Yazınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Açıklama</label>
                                <input type="text" asp-for="Description" class="form-control" id="exampleInputModel" placeholder="Açıklama Yazınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Video Url</label>
                                <input type="text" asp-for="VideoUrl" class="form-control" id="exampleInputModel" placeholder="Video Url Yazınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Video Açıklaması</label>
                                <input type="text" asp-for="VideoDescription" class="form-control" id="exampleInputModel" placeholder="Video Açıklaması Yazınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

